#!/bin/bash
version=$(awk '{if(NR==1)print$2;else exit}' ./NEWS)
if [[ ${version%b} != ${version} && $USER == kbwheel && $SKIPVGEN != 1 ]] ; then
	rev=$(svn stat -u 2>/dev/null | awk '/^Status against revision: /{printf "'$version'-%s", $4}')
	if [ $rev ] ; then
		echo -n $rev
	else
		echo $version | tr -d '\012'
	fi
else
	echo $version | tr -d '\012'
fi
