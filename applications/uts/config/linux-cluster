# Specify which targets should be built when a "make all"
# is performed.  The default is only uts-seq.

TARGETS_ALL = uts-seq time_rng uts-pthread uts-mpi

# -------------------------------------
# C Compiler 
# -------------------------------------
CC = gcc
CC_OPTS = -O3
LD_OPTS = -lm

# -------------------------------------
# MPI Compiler 
# -------------------------------------
MPICC = mpicc
MPICC_OPTS = -O3
MPILD_OPTS = -lm


# -------------------------------------
# UPC Compiler 
# -------------------------------------
UPCC = upcc
UPCC_OPTS = 
UPCLD_OPTS = -lm


# -------------------------------------
# OPENMP Compiler 
# -------------------------------------
OMPCC = icc
OMPCC_OPTS = -openmp
OMPLD_OPTS = -lm


# -------------------------------------
# SHMEM Compiler 
# -------------------------------------
SHMCC = false
SHMCC_OPTS = 
SHMLD_OPTS = 

# -------------------------------------
# GPSHMEM Compiler 
# -------------------------------------
GPSHMCC = mpicc
GPSHMCC_OPTS = -w -I$(HOME)/opt/include -L$(HOME)/opt/lib
GPSHMLD_OPTS = -lm -lgpshmem -larmci


